{
  "environment": "development",
  "performance_profile": "conservative",
  "timezone": "US/Eastern",
  "verbose": true,
  "data": {
    "max_retries": 3,
    "retry_delay": 1.0,
    "cache_ttl": 600,
    "cache_max_mb": 500,
    "parallel_workers": 5,
    "rate_limit_per_second": 5.0,
    "enable_compression": true,
    "enable_prefetch": true,
    "intraday_update_interval": 300,
    "daily_update_time": "08:00"
  },
  "trading": {
    "enabled": false,
    "max_position_size_pct": 0.05,
    "max_daily_loss_pct": 0.01,
    "max_correlation": 0.7,
    "max_sector_exposure_pct": 0.25,
    "min_trade_amount": 100.0,
    "commission_pct": 0.001,
    "slippage_pct": 0.002,
    "hours_only": true,
    "auto_stop_loss": true,
    "auto_take_profit": true
  },
  "ml": {
    "models_enabled": ["lstm", "ensemble", "traditional"],
    "lstm_enabled": true,
    "lstm_lookback": 20,
    "lstm_hidden_units": 64,
    "lstm_epochs": 100,
    "lstm_batch_size": 32,
    "ensemble_enabled": true,
    "ensemble_models": 5,
    "predict_on_new_data": true,
    "retrain_frequency": "weekly",
    "validation_split": 0.2
  },
  "monitoring": {
    "enabled": true,
    "log_level": "DEBUG",
    "log_file": "logs/development.log",
    "alert_discord_webhook": null,
    "alert_email": null,
    "alert_on_large_loss": true,
    "large_loss_threshold_pct": 0.10,
    "alert_on_position_near_stop": true,
    "position_risk_threshold_pct": 0.80,
    "alert_on_data_quality": true,
    "data_quality_threshold": 0.95,
    "collect_metrics": true,
    "metrics_interval_seconds": 60
  },
  "api": {
    "enabled": true,
    "host": "127.0.0.1",
    "port": 8000,
    "workers": 2,
    "reload": true,
    "cors_enabled": true,
    "auth_enabled": false,
    "auth_token": null,
    "rate_limit_requests": 100,
    "rate_limit_seconds": 60
  },
  "portfolio": {
    "initial_capital": 100000.0,
    "base_currency": "USD",
    "watchlist": ["SPY", "QQQ", "IWM", "GLD", "TLT", "AAPL", "MSFT", "GOOGL"],
    "excluded_symbols": [],
    "rebalance_frequency": "monthly",
    "target_allocations": {
      "SPY": 0.40,
      "QQQ": 0.20,
      "TLT": 0.20,
      "GLD": 0.10,
      "CASH": 0.10
    },
    "target_return_pct": 0.10,
    "target_volatility_pct": 0.10
  }
}

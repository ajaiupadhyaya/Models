# Environment variables for the Financial Models project
# Copy to .env and fill in your keys. Required = needed for core; Optional = enables extra features.
#
# Production (e.g. Render): Set these in your host's Environment (Render dashboard → Service → Environment).
# Do not commit real keys to the repo. Local dev: copy to .env and fill in.

# Data APIs (FRED required for macro/economic calendar; Alpha Vantage optional for chart data)
FRED_API_KEY=your_fred_api_key_here
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key_here
# Real news in News panel (optional)
FINNHUB_API_KEY=your_finnhub_api_key_here
# Terminal chart sample data: yfinance (default) or data_fetcher
SAMPLE_DATA_SOURCE=yfinance

# Backtesting (institutional engine: slippage, costs, market impact)
BACKTEST_USE_INSTITUTIONAL_DEFAULT=true

# OpenAI for AI analysis, NL query, and investor reports (optional but recommended)
OPENAI_API_KEY=your_openai_api_key_here

# Paper trading (Alpaca) — optional; Paper panel shows "Not configured" without these
ENABLE_PAPER_TRADING=true
ALPACA_API_KEY=your_alpaca_api_key_here
ALPACA_API_SECRET=your_alpaca_api_secret_here
ALPACA_API_BASE=https://paper-api.alpaca.markets

# Optional streaming / websockets
WEBSOCKET_ENABLED=true

# Monitoring
ENABLE_METRICS=true

# Terminal sign-in (for web deploy; set on host, not in repo)
# TERMINAL_USER=admin
# TERMINAL_PASSWORD=your_secure_password
# AUTH_SECRET=long_random_string_for_jwt_signing

# Frontend (build-time only): when API is on a different origin (e.g. static site + separate API), set API base URL.
# Same-origin deploy (e.g. single Docker service): leave unset so /api/* requests go to the same host.
# Split deploy: build with VITE_API_ORIGIN=https://your-api.example.com (no trailing slash) then npm run build.
# VITE_API_ORIGIN=

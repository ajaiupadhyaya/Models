# Environment variables for the Financial Models project
# Copy to .env and fill in your keys

# Data APIs
FRED_API_KEY=your_fred_api_key_here
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key_here
# Terminal chart sample data: yfinance (default) or data_fetcher
SAMPLE_DATA_SOURCE=yfinance

# Backtesting (institutional engine: slippage, costs, market impact)
BACKTEST_USE_INSTITUTIONAL_DEFAULT=true

# OpenAI for investor reports
OPENAI_API_KEY=your_openai_api_key_here

# Paper trading (Alpaca)
ENABLE_PAPER_TRADING=true
ALPACA_API_KEY=your_alpaca_api_key_here
ALPACA_API_SECRET=your_alpaca_api_secret_here
ALPACA_API_BASE=https://paper-api.alpaca.markets

# Optional streaming / websockets
WEBSOCKET_ENABLED=true

# Monitoring
ENABLE_METRICS=true

# Terminal sign-in (for web deploy; set on host, not in repo)
# TERMINAL_USER=admin
# TERMINAL_PASSWORD=your_secure_password
# AUTH_SECRET=long_random_string_for_jwt_signing
